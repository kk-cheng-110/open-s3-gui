{
  "name": "open-s3-ui",
  "version": "0.1.1",
  "description": "A desktop S3 browser tool built with Electron and Vue",
  "author": {
    "name": "kk.cheng",
    "email": "kk.cheng.110@gmail.com"
  },
  "main": "electron/main.js",
  "scripts": {
    "dev:renderer": "vite",
    "dev:electron": "electron .",
    "dev": "npm run dev:renderer & npm run dev:electron",
    "build:renderer": "vite build",
    "build:icons": "node scripts/build-icons.js",
    "build:mac": "npm run build:renderer && electron-builder --mac",
    "build:win": "npm run build:renderer && electron-builder --win",
    "build:linux": "npm run build:renderer && electron-builder --linux",
    "build:all": "npm run build:renderer && electron-builder -mwl"
  },
  "build": {
    "appId": "com.opens3.client",
    "productName": "Open S3",
    "directories": {
      "output": "dist-app"
    },
    "files": [
      "electron/**/*",
      "dist/**/*",
      "index.html",
      "build/icon.png"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.utilities",
      "icon": "build/icon.icns"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "verifyUpdateCodeSignature": false
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Open S3",
      "deleteAppDataOnUninstall": false,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "perMachine": false,
      "runAfterFinish": true,
      "menuCategory": true,
      "include": "build/installer.nsh",
      "displayLanguageSelector": false,
      "installerLanguages": ["zh_CN", "en_US"],
      "language": "2052",
      "warningsAsErrors": false
    },
    "electronDownload": {
      "mirror": "https://npmmirror.com/mirrors/electron/"
    }
  },
  "devDependencies": {
    "@electron/remote": "^2.1.2",
    "@vitejs/plugin-vue": "^5.0.0",
    "electron": "^33.0.0",
    "electron-builder": "^26.0.12",
    "png2icons": "^2.0.1",
    "vite": "^5.0.0",
    "vue": "^3.5.0"
  },
  "type": "commonjs",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.947.0",
    "@vicons/ionicons5": "^0.13.0",
    "electron-updater": "^6.6.2",
    "naive-ui": "^2.43.2"
  }
}
